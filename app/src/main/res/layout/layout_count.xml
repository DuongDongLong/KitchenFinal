<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_circle_minus_cart"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_minus"
            app:civ_border_width="1dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:civ_border_color="#e7e7e4"/>

        <EditText
            android:id="@+id/textViewQuantityCart"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:inputType="number"
            android:text="1"
            android:background="@null"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#f000"
            app:layout_constraintEnd_toStartOf="@+id/image_circle_plus_cart"
            app:layout_constraintStart_toEndOf="@+id/image_circle_minus_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_circle_plus_cart"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:civ_border_width="1dp"
            android:layout_gravity="center"

            app:civ_border_color="#e7e7e4"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>